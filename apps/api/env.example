# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Do not commit real credentials. For local dev, configure a secure password in .env
DATABASE_URL=postgresql://postgres:${DB_PASSWORD:-postgres}@localhost:5432/isntgram
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=isntgram

# Authentication
# JWT_SECRET must be set in all environments except tests.
JWT_SECRET=
JWT_EXPIRES_IN=7d
# Optional refresh token secret
REFRESH_TOKEN_SECRET=
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# External Services
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Demo User (non-sensitive placeholders)
DEMO_EMAIL=demo@isntgram.ai
DEMO_USERNAME=demo
DEMO_FULL_NAME=Demo User
DEMO_PASSWORD=changeme
