{
  "name": "isntgram-ai",
  "version": "1.0.0",
  "description": "AI-powered social media platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web & npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "test": "jest",
    "test:web": "jest --selectProjects web",
    "test:api": "jest --selectProjects api",
    "test:shared-types": "jest --selectProjects shared-types",
    "lint": "npm run lint --workspaces",
    "lint:web": "npm run lint --workspace=apps/web",
    "lint:api": "npm run lint --workspace=apps/api",
    "format": "npm run format --workspaces",
    "format:web": "npm run format --workspace=apps/web",
    "format:api": "npm run format --workspace=apps/api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "coverage": "jest --coverage",
    "coverage:report": "node scripts/coverage-report.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "apps/api/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "packages/shared-types/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
