{
  "name": "isntgram-ai",
  "version": "1.0.0",
  "description": "AI-powered social media platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web & npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build:api && npm run build:web && npm run build:shared-types",
    "build:dev": "npm run build:api:dev && npm run build:web && npm run build:shared-types",
    "build:web": "npm --prefix apps/web run build",
    "build:api": "npm --prefix apps/api run build",
    "build:api:dev": "npm --prefix apps/api run build:dev",
    "build:shared-types": "npm --prefix packages/shared-types run build",
    "test": "jest",
    "test:unit": "jest",
    "test:integration": "jest --selectProjects api --testPathPatterns integration",
    "test:web": "jest --selectProjects web",
    "test:api": "jest --selectProjects api",
    "test:shared-types": "jest --selectProjects shared-types",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:with-db": "./scripts/test-with-db.sh",
    "test:full": "./scripts/full-test.sh",
    "type-check": "npx tsc -p apps/web/tsconfig.json --noEmit && npx tsc -p apps/api/tsconfig.json --noEmit && npx tsc -p packages/shared-types/tsconfig.json --noEmit",
    "lint": "npm run lint:md && npm run lint:web && npm run lint:api && npm run lint:shared-types",
    "lint:md": "markdownlint . --ignore-path .markdownlintignore --config .markdownlint.json",
    "lint:web": "npm --prefix apps/web run lint",
    "lint:api": "npm --prefix apps/api run lint",
    "lint:shared-types": "npm --prefix packages/shared-types run lint",
    "format": "npm run format --workspaces",
    "format:web": "npm run format --workspace=apps/web",
    "format:api": "npm run format --workspace=apps/api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "coverage": "jest --coverage",
    "coverage:report": "node scripts/coverage-report.mjs",
    "ci:start:web": "npm run start --workspace=apps/web -- -p 3000",
    "ci:start:api": "SKIP_DB=true PORT=3001 npm run start:prod --workspace=apps/api",
    "db:start": "./scripts/dev-db.sh",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs postgres",
    "db:reset": "docker-compose down -v && ./scripts/dev-db.sh",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@nestjs/cli": "^10.0.0",
    "@playwright/test": "^1.54.2",
    "@swc/core": "^1.7.42",
    "@swc/jest": "^0.2.39",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^30.0.5",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.6.2",
    "sqlite3": "^5.1.7",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "apps/api/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'cd apps/api && npx tsc -p . --noEmit'",
      "jest --selectProjects api --testPathIgnorePatterns=integration"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'cd apps/web && npx tsc -p . --noEmit'",
      "jest --selectProjects web"
    ],
    "packages/shared-types/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'cd packages/shared-types && npx tsc -p . --noEmit'",
      "jest --selectProjects shared-types"
    ],
    "*.{json,md}": [
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "cross-spawn": "^7.0.6"
  }
}
