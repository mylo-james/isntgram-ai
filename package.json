{
  "name": "isntgram-ai",
  "version": "1.0.0",
  "description": "AI-powered social media platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web & npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "test": "npm run test --workspaces",
    "test:web": "npm run test --workspace=apps/web",
    "test:api": "npm run test --workspace=apps/api",
    "lint": "npm run lint --workspaces",
    "lint:web": "npm run lint --workspace=apps/web",
    "lint:api": "npm run lint --workspace=apps/api",
    "format": "npm run format --workspaces",
    "format:web": "npm run format --workspace=apps/web",
    "format:api": "npm run format --workspace=apps/api",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "apps/api/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/api/eslint.config.mjs",
      "prettier --write"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/web/eslint.config.mjs",
      "prettier --write"
    ],
    "packages/shared-types/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/shared-types/eslint.config.mjs",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
